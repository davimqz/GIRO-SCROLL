# Private key da wallet que vai fazer deploy (SEM o prefixo 0x)
# ⚠️  NUNCA commite a .env real! Só use wallets de teste com pouco ETH
PRIVATE_KEY=your_private_key_here

# RPC URLs (padrão já funciona, mas você pode usar Alchemy/Infura)
SCROLL_SEPOLIA_RPC_URL=https://sepolia-rpc.scroll.io
SCROLL_RPC_URL=https://rpc.scroll.io

# API key do Scrollscan para verificação automática do contrato
# Pegue em: https://scrollscan.com/myapikey
SCROLLSCAN_API_KEY=your_scrollscan_api_key

# API key do CoinMarketCap (opcional, para gas reporter mostrar custo em USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Para habilitar gas reporting nos testes
REPORT_GAS=false
